@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@namespace Sandbox


<VirtualGrid Items=@Entities ItemSize=@(160)>
    <Item Context="item">
        @if (item is ScriptedEntity entry)
        {
            <SpawnMenuIcon Type="entity" Title=@entry.Title Path=@entry.ResourcePath></SpawnMenuIcon>
        }
    </Item>
</VirtualGrid>

@code
{
    List<ScriptedEntity> Entities = [];

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        Entities = ResourceLibrary.GetAll<ScriptedEntity>().ToList();


    }
}
